                        android:textSize="23dp"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toEndOf="@id/conlayout"
                        app:layout_constraintStart_toStartOf="@id/conlayout"
                        app:layout_constraintTop_toBottomOf="@id/card_editText" />

