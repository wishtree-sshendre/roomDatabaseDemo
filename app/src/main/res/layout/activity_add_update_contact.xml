<ImageView
    android:layout_width="100dp"
    android:layout_height="100dp"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    android:src="@drawable/note_image"
    android:id="@+id/image"
    />
    <EditText
        android:layout_marginTop="40dp"
        android:id="@+id/title_field"
        android:hint="Enter Title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/textField_style"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintTop_toBottomOf="@id/image"/>

    <EditText
        android:id="@+id/desc_field"
        android:height="160dp"
        android:hint="Enter Description"
        app:layout_constraintTop_toBottomOf="@id/title_field"
        tools:layout_editor_absoluteX="20dp"
        style="@style/textField_style"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/set_date_btn"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="Select Date"
        android:layout_marginTop="20dp"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:background="@drawable/custom_button"
        app:backgroundTint="@color/purple_200"
        app:layout_constraintTop_toBottomOf="@id/desc_field"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />


        <com.google.android.material.button.MaterialButton
            android:id="@+id/set_time_btn"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="Select Time"
            android:layout_marginTop="20dp"
            android:textSize="20dp"
            android:background="@drawable/custom_button"
            android:textColor="@color/black"
            app:backgroundTint="@color/purple_200"
            app:layout_constraintTop_toBottomOf="@id/set_date_btn"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />


    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Button"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/spin_dd"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
    <Spinner
        android:id="@+id/spin_dd"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:textAlignment="center"
        android:elevation="10dp"
        android:layout_marginHorizontal="50dp"
        android:prompt="@string/app_name"
        android:popupBackground="@color/white"
        android:dropDownSelector="@color/purple_700"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/set_time_btn"></Spinner>

</androidx.constraintlayout.widget.ConstraintLayout>